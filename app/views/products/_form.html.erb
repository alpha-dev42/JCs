<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form>
  <div class="form-group product-styling">
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder:"Product Name" %><br>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder:"Product Description" %><br>

    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: 'form-control', placeholder:"Product Image" %><br>

    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control', placeholder:"Product Price" %><br>

    <%= f.label :colour %>
    <%= f.text_field :colour, class: 'form-control', placeholder:"Product Colour" %><br>
    
    <div class="actions">
    <%= f.submit class: 'btn btn-default'%>
    </div>
  </div> 
<% end %>

</form>
