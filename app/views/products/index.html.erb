<p id="notice"><%= notice %></p>

<h1>Products</h1>

<% @products.each_slice(3) do |products| %>
  <div class="container">
    <div class="col-md-12 col-sm-12 colxs-12 column productbox">
    <% products.each do |product| %>
      <div class="col-md-3 col-sm-4 colxs-12" data-mh="each-product">
         <div class="productdesc"><%= image_tag(product.image_url, class: 'img-responsive product-image', data: {mh: 'product-image'}) %></div>
        <div class="producttitle"><%= link_to product.name, product, data: {mh: 'product-name'} %></div>
        <div class="product-desc"><p data-mh="product-description"><%= product.description %></p></div>
        <div class="productprice"><p class="product-price" data-mh="product-price">$<%= product.price %></p></div>
        <div class="product-desc"> <p class="productdesc" data-mh="product-colour"><%= product.colour %></p></div> 
        <p class="product-desc"><%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
  <% end %>
      </div>
    </div>
  </div>
<% end %>
