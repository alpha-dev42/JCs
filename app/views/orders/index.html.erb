<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm-2 col-md-4">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order.product %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.total %></strong>
      <br>
      <%= link_to 'Show', order %>
    </div><!-- /col -->
  <% end %>
</div>