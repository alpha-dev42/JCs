<div class="row">
  <% @orders.each do |order| %>
    <div class="col-sm-1 col-md-1">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order.product %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div><!-- /col-->
  <% end %>
</div><!--row-->